{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run cargo",
            "type": "shell",
            "command": "cargo run -q --bin ${fileBasenameNoExtension}",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "build cargo",
            "type": "cargo",
            "subcommand": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "check cargo",
            "type": "shell",
            "command": "cargo check -q --bin ${fileBasenameNoExtension}",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        // {
        //     "label": "check - cargo",
        //     "type": "cargo",
        //     "subcommand": "check",
        //     "presentation": {
        //         "panel": "shared",
        //         "clear": true
        //     },
        //     "problemMatcher": [
        //         "$rustc"
        //     ]
        // },
        {
            "label": "test cargo",
            "type": "shell",
            "command": "cargo test -q --bin ${fileBasenameNoExtension} -- --nocapture",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}