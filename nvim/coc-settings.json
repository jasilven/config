{
  "rust-analyzer.serverPath": "~/.cargo/bin/rust-analyzer",
  "json.enable": true,
  "coc-actions.showActionKind":true ,
  "codeLens.enable":true,
  "codeLens.separator": "â€£",
  "json.format.enable": true,
  "coc.preferences.formatOnType": true,
  "coc.source.buffer.ignoreGitignore": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "clojure",
    "go",
    "json"
  ],
  "coc.preferences.snippets.enable": true,
  "diagnostic.enableSign": true,
  "diagnostic.joinMessageLines": true,
  "diagnostic.infoSign": "i",
  "diagnostic.errorSign": "!",
  "diagnostic.warningSign": "?",
  "diagnostic.highlightOffset": 1000,
  "diagnostic.hintSign": "i",
  "suggest.autoTrigger": "always",
  "suggest.snippetIndicator": "~",
  "suggest.labelMaxLength": 60,
  "suggest.maxPreviewWidth": 60,
  "suggest.detailMaxLength": 60,
  "suggest.enablePreview": true,
  "suggest.disableKind": true,
  "diagnostic.virtualText": true,
  "languageserver": {
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "clojure-lsp"],
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj", "deps.edn"],
      "additionalSchemes": ["jar", "zipfile"],
      "trace.server": "verbose",
      "initializationOptions": {
      }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  }
}
